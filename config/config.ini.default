[ACCOUNT]
api_key = <your api key>

[SCREEN]
width = 1920
height = 1080

[BEHAVIOUR]
slide_duration = 30
max_slides_from_genre = 50
randomise_genres = true
use_average_color = true
fallback_fill_color = #000000

[GENRES]
favourites = astro, lifestyle, ocean, abstract, nature, art, animals, paintings, world, random

[WATCH]
enabled = true
font_scale = 2
font_thickness = 2
offset_bottom_right_x = 200
offset_bottom_right_y = 200
offset_shadow = 3
max_random_offset_jump = 50

[KEYS]
genre = ##genre##
width = ##width##
height = ##height##
id = ##id##

[REST]
header_authorization_key = Authorization
query_genre = https://api.pexels.com/v1/search?query=##genre##&sort
full_image_suffix = ?auto=compress&cs=tinysrgb&__fit=crop&w=##width##&h=##height##

[CACHE]
local_path = ./.cache/##id##.jpeg
fit_local_path = ./.cache/fit_##id##.jpeg
